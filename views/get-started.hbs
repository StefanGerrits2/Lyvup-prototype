<div id="page">
    {{> new-header}}
    <div id="main__container" class="full-width">
        <h1>Welkom bij lyvup!</h1>

        <h4 class="margin-top">Nodig je team leden uit</h4>
        <div class="team_card__container">
            <div class="team__card">
                <img class="team-user-img" src="/images/user.png" alt="">
                <label>
                    <input placeholder="naam" id="naam" autocomplete="new-password">
                </label>
                <label>
                    <input placeholder="email" id="email" autocomplete="new-password">
                </label>
                <button id="addPerson">Voeg toe</button>
            </div>

            <div class="person__card-container"></div>
        </div>

        <div>
            <h4 class="margin-top">Schrijf je uitnodigings bericht</h4>

            <div class="invite-container">
                <textarea name="textarea" required="" placeholder="<naam> wilt je uitnodigen voor lyvup! "></textarea>
            </div>
        </div>

        <h4 class="margin-top">Vul je account gegevens in</h4>

        <div class="sign-up">
            <label>
                <input placeholder="Voornaam" type="text" name="" id="">
            </label>
            <label>
                <input placeholder="Wachtwoord (minimaal 8 characters)" type="password" name="" id="">
            </label>
        </div>
        <button><a href="/">Voltooien</a></button>
    </div>
</div>

<script src="js/get-started.js"></script>