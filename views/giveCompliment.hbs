{{> header}}

<div id="compliment__container" id="center">
    <h1>Geef complimenten of vraag feedback</h1>

    <form method="post" action="/compliment-or-feedback">
        <div id="team2__container">
            <p>Team</p>
            <div class="select">
                <select name="members" id="select2">
                    {{#each data}}
                        <option value={{acc_wly_name}}>{{acc_wly_name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>

        <div id="option__container">
            <p>Ik wil...</p>
            <input id="praise" class="option1" type="radio" value="praise" name="type" checked>
            <label for="praise">een compliment geven</label>

            <input id="feedback" class="option2" type="radio" value="ask-feedback" name="type">
            <label for="feedback">feedback vragen</label>
        </div>

        <div id="super-compliment__container">
            <p>Super compliment?</p>
            <input name="superCompliment?" type="checkbox" id="supercompliment" value="yes">
            <label id="super-compliment__button" for="supercompliment">Activeer een super compliment</label>
        </div>

        <div id="select__container">
            <h2>Compliment geven</h2>
            <p>Selecteer minimaal 1 persoon</p>

            <div id="team-member__container">
                <input name="selectedMembers" type="checkbox" id="1" value="Stefan Gerrits">
                <label for="1">
                    <div>
                        <img src="/images/stefan.jpg" alt="">
                        <p>Stefan Gerrits</p>
                        <span>Teamspeler</span>
                    </div>
                </label>

                <input name="selectedMembers" type="checkbox" id="2" value="Reinier van Limpt">
                <label for="2">
                    <div>
                        <img src="/images/reinier.jpg" alt="">
                        <p>Reinier van Limpt</p>
                        <span>Teamspeler</span>
                    </div>
                </label>
                <input name="selectedMembers" type="checkbox" id="3" value="Lex testpersoon">
                <label for="3">
                    <div>
                        <img src="/images/random4.jpg" alt="">
                        <p>Lex testpersoon</p>
                        <span>Teamspeler</span>
                    </div>
                </label>
                <input name="selectedMembers" type="checkbox" id="4" value="Anna testpersoon">
                <label for="4">
                    <div>
                        <img src="/images/random3.jpg" alt="">
                        <p>Anna testpersoon</p>
                        <span>Teamspeler</span>
                    </div>
                </label>
                <input name="selectedMembers" type="checkbox" id="5" value="Tim testpersoon">
                <label for="5">
                    <div>
                        <img src="/images/random2.jpg" alt="">
                        <p>Tim testpersoon</p>
                        <span>Teamspeler</span>
                    </div>
                </label>
                <input name="selectedMembers" type="checkbox" id="6" value="Lisabeth testpersoon">
                <label for="6">
                    <div>
                        <img src="/images/random1.jpg" alt="">
                        <p>Lisabeth testpersoon</p>
                        <span>Teamspeler</span>
                    </div>
                </label>
            </div>
        </div>

        <div id="selected-members__container">
            <h4>Geselecteerde persoon:</h4>
            <div id="selected-members">

            </div>
        </div>

        <textarea name="textarea" id="" rows="10" required placeholder="Typ hier je compliment..."></textarea>
        <input type="submit" class="defaultButton" value="Versturen">
    </form>
</div>

<script src="js/compliments.js"></script>